<article class="font-mono mb-16 p-8 bg-gray-900 bg-opacity-10 flex flex-col justify-between sm:flex-col md:flex-row lg:mb-12 lg:flex-row">
  <div class="flex flex-col w-full sm:w-full md:w-6/12 lg:w-6/12 xl:w-6/12">
    <h3 class="text-2xl text-center font-bold text-gray-800 mb-4 lg:text-xl lg:text-left">{{ project.data.title }}</h3>
    <p class="text-md text-center text-gray-700 mb-2 lg:text-base lg:text-left lg:text-lg lg:mb-4">{{ project.data.page.excerpt | safe }} </p>
    <span class="text-center text-xl my-8 lg:text-base lg:text-left lg:mt-auto lg:my-0 md:mt-auto md:my-0">
    {% if project.data.process %}
      <a class="my-link font-semibold" href="{{project.data.code}}">View Code</a> | 
      <a class="my-link font-semibold" href="{{project.data.process}}">Process Entries</a>
    {% else %}
      <a class="my-link font-semibold" href="{{project.data.live}}">Live Site</a> | 
      <a class="my-link font-semibold" href="{{project.data.code}}">View Code</a>
    {% endif %}
    </span>
  </div>
  <div class="flex flex-col justify-center items-center w-full sm:w-full md:w-5/12 lg:w-5/12 xl:w-5/12">
    <img
      class="my-img w-full"
      src="{{ project.data.preview | url }}"
      alt="{{ project.data.title }}">
  </div>
</article>