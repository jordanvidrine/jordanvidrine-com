<section class="project mx-auto flex px-4 flex-col items-center mb-8 2xl:px-72 xl:px-28 lg:px-4 lg:w-9/12">
    <div id="underline-blue" class="relative">
      <h1 class="text-7xl font-bold text-gray-800 text-center relative mb-16 lg:text-4xl">Latest Projects<span class="p-4">ðŸ› </span></h1>
    </div>
    {% for project in collections.project %}
      <article class="font-mono flex flex-col justify-between items-center mb-16 p-8 bg-gray-900 bg-opacity-10 lg:flex-row lg:mb-8">
        <div class="flex flex-col lg:w-6/12">
          <h3 class="text-5xl text-center font-bold text-gray-800 mb-4 lg:text-xl lg:text-left">{{ project.data.title }}</h3>
          <p class="text-4xl text-center text-gray-700 lg:text-base lg:text-left">{{ project.data.page.excerpt | safe }} </p>
          <span class="text-4xl text-center my-8 lg:text-base lg:text-left lg:my-0 lg:mt-4">
          {% if project.data.process %}
            <a class="text-blue-500 hover:text-blue-700 font-semibold" href="{{project.data.code}}">View Code</a> | 
            <a class="text-blue-500 hover:text-blue-700 font-semibold" href="{{project.data.process}}">Process Entries</a>
          {% else %}
            <a class="text-blue-500 hover:text-blue-700 font-semibold" href="{{project.data.live}}">Live Site</a> | 
            <a class="text-blue-500 hover:text-blue-700 font-semibold" href="{{project.data.code}}">View Code</a>
          {% endif %}
          </span>
        </div>
        <div class="flex flex-col justify-center items-center w-full lg:w-5/12">
          <img
            class="my-img w-full"
            src="{{ project.data.preview | url }}"
            alt="{{ project.data.title }}">
        </div>
      </article>
    {% endfor %}
</section>